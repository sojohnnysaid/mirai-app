# PostgreSQL Secret Template for Mirai App Database
# Copy this file to postgres-secret.yaml and replace $PASSWORD with actual password
# DO NOT commit postgres-secret.yaml to git
apiVersion: v1
kind: Secret
metadata:
  name: mirai-db-secret
  namespace: mirai
type: Opaque
stringData:
  password: $PASSWORD
  # Full DSN for Go backend
  dsn: postgres://mirai:$PASSWORD@mirai-db.mirai.svc.cluster.local:5432/mirai?sslmode=disable
