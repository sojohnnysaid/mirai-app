# Local Development Environment
# This file is used when running `npm run dev`

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# Kratos Authentication
NEXT_PUBLIC_KRATOS_BROWSER_URL=http://localhost:4433
KRATOS_PUBLIC_URL=http://localhost:4433

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Marketing site runs on port 3001 (mirrors production get-mirai.sogos.io)
NEXT_PUBLIC_LANDING_URL=http://localhost:3001

# Storage - enabled for production parity
USE_S3_STORAGE=true
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=mirai
S3_REGION=us-east-1
S3_BASE_PATH=data
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Cache - enabled for production parity
ENABLE_REDIS_CACHE=true
REDIS_URL=redis://localhost:6379
